# Foodify Environment Variables for Production (Render)
# IMPORTANT: Set these in Render Dashboard -> Environment Variables

# Django Settings
SECRET_KEY=your_production_secret_key_here
DEBUG=False
ALLOWED_HOSTS=your-app-name.onrender.com,yourdomain.com

# Database (Render will auto-provide this)
DATABASE_URL=postgresql://user:password@host:port/database

# Stripe Configuration
# Get your keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLIC_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here

# Geoapify API for location services
# Get your key from: https://www.geoapify.com/
GEOAPIFY_API_KEY=your_geoapify_key_here

# Email Configuration (Optional)
EMAIL_HOST_PASSWORD=your_email_password_here
